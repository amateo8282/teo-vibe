<div class="min-h-[calc(100vh-86px)] flex flex-col items-center justify-center px-5">
  <h1 class="text-4xl font-black text-tv-orange mb-8">TeoVibe</h1>

  <div class="w-full max-w-md bg-white rounded-card-lg shadow-sm p-8">
    <%# 탭 %>
    <div class="flex mb-6 border border-tv-light-gray/30 rounded-pill overflow-hidden">
      <div class="flex-1 py-3 text-center text-sm font-black bg-white shadow-sm rounded-pill border border-tv-light-gray/30 -m-px">
        로그인
      </div>
      <%= link_to "회원가입", new_registration_path,
        class: "flex-1 py-3 text-center text-sm font-bold text-tv-gray hover:text-tv-black transition-colors" %>
    </div>

    <%# 소셜 로그인 %>
    <p class="text-center text-sm text-tv-gray mb-4">소셜 계정으로 간편하게 로그인하세요</p>

    <%= render "shared/auth_social" %>

    <%# 구분선 %>
    <div class="relative mt-6 mb-6">
      <div class="absolute inset-0 flex items-center"><div class="w-full border-t border-tv-light-gray/30"></div></div>
      <div class="relative flex justify-center text-xs"><span class="bg-white px-4 text-tv-light-gray">또는 이메일로 로그인</span></div>
    </div>

    <%# 이메일 로그인 폼 %>
    <%= form_with url: session_path, class: "space-y-4" do |f| %>
      <div>
        <label for="email_address" class="block text-sm font-bold mb-1">이메일</label>
        <%= f.email_field :email_address, required: true, autofocus: true, autocomplete: "email",
          class: "w-full px-4 py-3 rounded-2xl border border-tv-light-gray/50 focus:border-tv-gold focus:outline-none text-sm" %>
      </div>

      <div>
        <label for="password" class="block text-sm font-bold mb-1">비밀번호</label>
        <%= f.password_field :password, required: true, autocomplete: "current-password",
          class: "w-full px-4 py-3 rounded-2xl border border-tv-light-gray/50 focus:border-tv-gold focus:outline-none text-sm" %>
      </div>

      <button type="submit" class="w-full bg-tv-black text-white rounded-pill py-3.5 text-base font-bold hover:opacity-90 transition-opacity">
        로그인
      </button>
    <% end %>

    <div class="mt-4 text-center">
      <%= link_to "비밀번호를 잊으셨나요?", new_password_path, class: "text-xs text-tv-light-gray hover:text-tv-black transition-colors" %>
    </div>
  </div>

  <%= link_to root_path, class: "mt-6 text-sm text-tv-gray hover:text-tv-black transition-colors" do %>
    &larr; 홈으로 돌아가기
  <% end %>
</div>
