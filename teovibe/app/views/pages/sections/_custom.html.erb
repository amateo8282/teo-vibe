<%# 커스텀 섹션: 제목 + 부제목 + 카드 %>
<section class="py-24 px-5"
  style="<%= "background-color: #{section.background_color};" if section.background_color.present? %> <%= "color: #{section.text_color};" if section.text_color.present? %>"
  data-controller="scroll-animation">
  <div class="max-w-[1200px] mx-auto">
    <h2 class="text-subheading md:text-display font-black leading-tight mb-8"><%= section.title %></h2>
    <% if section.subtitle.present? %>
      <p class="text-lg mb-12 opacity-80"><%= section.subtitle %></p>
    <% end %>

    <% if section.section_cards.any? %>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <% section.section_cards.ordered.each do |card| %>
          <div class="bg-white/10 backdrop-blur rounded-card p-6">
            <h3 class="text-xl font-extrabold mb-2"><%= card.title %></h3>
            <p class="text-base opacity-80"><%= card.description %></p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</section>
