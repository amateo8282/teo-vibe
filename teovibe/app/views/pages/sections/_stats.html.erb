<%# 통계 섹션: 큰 숫자와 이미지 %>
<section class="py-24 px-5" data-controller="scroll-animation">
  <div class="max-w-[1200px] mx-auto text-center">
    <h2 class="text-subheading md:text-display font-black leading-tight mb-16" style="letter-spacing: -0.8px;">
      <%= section.title %>
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <% section.section_cards.ordered.each do |card| %>
        <div class="bg-white rounded-card p-8" data-controller="scroll-animation">
          <% if card.icon.present? %>
            <p class="text-5xl font-black mb-2"><%= card.icon %></p>
          <% end %>
          <h3 class="text-2xl font-extrabold mb-2"><%= card.title %></h3>
          <p class="text-tv-gray"><%= card.description %></p>
        </div>
      <% end %>
    </div>
  </div>
</section>
