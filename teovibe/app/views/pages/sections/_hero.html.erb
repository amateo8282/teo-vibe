<%# 히어로 섹션: memoir 스타일 대형 타이포 + 그리드 배경 %>
<section class="min-h-[744px] flex items-center justify-center bg-tv-cream relative overflow-hidden"
  style="background-image: url('data:image/svg+xml,%3Csvg width=\"40\" height=\"40\" xmlns=\"http://www.w3.org/2000/svg\"%3E%3Cpath d=\"M0 0h40v40H0z\" fill=\"none\"/%3E%3Cpath d=\"M0 40V0h1v40zm40 0V0h1v40z\" fill=\"%23ddd6c8\" fill-opacity=\"0.3\"/%3E%3Cpath d=\"M0 0h40v1H0zm0 40h40v1H0z\" fill=\"%23ddd6c8\" fill-opacity=\"0.3\"/%3E%3C/svg%3E');"
  data-controller="scroll-animation">
  <div class="text-center max-w-5xl mx-auto px-5 relative z-10">
    <h1 class="text-display md:text-hero font-black tracking-tight leading-tight mb-6" style="letter-spacing: -0.8px;">
      <%= section.title %>
    </h1>
    <% if section.subtitle.present? %>
      <p class="text-lg md:text-xl text-tv-gray mb-10 max-w-2xl mx-auto leading-relaxed">
        <%= section.subtitle %>
      </p>
    <% end %>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <%= link_to "시작하기 ->", new_registration_path,
        class: "bg-tv-black text-white rounded-pill px-7 py-4 text-lg font-bold hover:opacity-90 transition-opacity" %>
      <%= link_to "더 알아보기", about_path,
        class: "border border-tv-black text-tv-black rounded-pill px-7 py-4 text-lg font-bold hover:bg-tv-black hover:text-white transition-colors" %>
    </div>
  </div>
</section>
