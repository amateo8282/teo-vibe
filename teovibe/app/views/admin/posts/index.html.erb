<div class="flex items-center justify-between mb-8">
  <h1 class="text-2xl font-black">게시글 관리</h1>
  <%= link_to "새 게시글", new_admin_post_path, class: "bg-tv-gold text-tv-black rounded-pill px-6 py-3 text-sm font-bold hover:opacity-90 transition-opacity" %>
</div>

<div class="bg-white rounded-card overflow-hidden">
  <table class="w-full text-sm">
    <thead class="bg-gray-50 border-b">
      <tr>
        <th class="text-left px-4 py-3 font-bold">제목</th>
        <th class="text-left px-4 py-3 font-bold">카테고리</th>
        <th class="text-left px-4 py-3 font-bold">작성자</th>
        <th class="text-left px-4 py-3 font-bold">상태</th>
        <th class="text-left px-4 py-3 font-bold">날짜</th>
        <th class="text-right px-4 py-3 font-bold">액션</th>
      </tr>
    </thead>
    <tbody class="divide-y">
      <% @posts.each do |post| %>
        <tr>
          <td class="px-4 py-3"><%= post.title.truncate(40) %></td>
          <td class="px-4 py-3"><%= post.category_name %></td>
          <td class="px-4 py-3"><%= post.user.nickname %></td>
          <td class="px-4 py-3">
            <span class="<%= post.published? ? 'text-green-600' : 'text-tv-gray' %>"><%= post.status %></span>
          </td>
          <td class="px-4 py-3 text-tv-gray"><%= post.created_at.strftime("%m/%d") %></td>
          <td class="px-4 py-3 text-right">
            <%= link_to "편집", edit_admin_post_path(post), class: "text-tv-orange hover:underline" %>
            <%= button_to "삭제", admin_post_path(post), method: :delete,
              data: { turbo_confirm: "삭제하시겠습니까?" }, class: "text-red-500 hover:underline ml-2" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="mt-6">
  <%== @pagy.series_nav %>
</div>
