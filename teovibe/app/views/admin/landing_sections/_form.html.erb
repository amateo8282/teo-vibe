<%= form_with model: [:admin, section], class: "max-w-lg space-y-4" do |f| %>
  <div>
    <label class="block text-sm font-bold mb-1">섹션 타입</label>
    <%= f.select :section_type, LandingSection.section_types.keys.map { |k| [k.humanize, k] },
      {}, class: "w-full px-4 py-3 rounded-2xl border border-gray-300 focus:outline-none" %>
  </div>
  <div>
    <label class="block text-sm font-bold mb-1">제목</label>
    <%= f.text_field :title, required: true, class: "w-full px-4 py-3 rounded-2xl border border-gray-300 focus:outline-none" %>
  </div>
  <div>
    <label class="block text-sm font-bold mb-1">부제목</label>
    <%= f.text_area :subtitle, rows: 3, class: "w-full px-4 py-3 rounded-2xl border border-gray-300 focus:outline-none resize-none" %>
  </div>
  <div class="grid grid-cols-2 gap-4">
    <div>
      <label class="block text-sm font-bold mb-1">배경색</label>
      <%= f.text_field :background_color, placeholder: "#F5F1EA", class: "w-full px-4 py-3 rounded-2xl border border-gray-300 focus:outline-none" %>
    </div>
    <div>
      <label class="block text-sm font-bold mb-1">글자색</label>
      <%= f.text_field :text_color, placeholder: "#1D1403", class: "w-full px-4 py-3 rounded-2xl border border-gray-300 focus:outline-none" %>
    </div>
  </div>
  <div>
    <label class="block text-sm font-bold mb-1">순서</label>
    <%= f.number_field :position, class: "w-full px-4 py-3 rounded-2xl border border-gray-300 focus:outline-none" %>
  </div>
  <div class="flex items-center gap-2">
    <%= f.check_box :active, class: "rounded" %>
    <label class="text-sm font-bold">활성화</label>
  </div>
  <div class="flex gap-3">
    <%= link_to "취소", admin_landing_sections_path, class: "border border-gray-300 rounded-pill px-6 py-3 text-sm font-bold" %>
    <%= f.submit section.persisted? ? "수정" : "생성", class: "bg-tv-gold text-tv-black rounded-pill px-6 py-3 text-sm font-bold cursor-pointer" %>
  </div>
<% end %>
