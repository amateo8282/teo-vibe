<h1 class="text-2xl font-black mb-8">사용자 관리</h1>

<div class="bg-white rounded-card overflow-hidden">
  <table class="w-full text-sm">
    <thead class="bg-gray-50 border-b">
      <tr>
        <th class="text-left px-4 py-3 font-bold">닉네임</th>
        <th class="text-left px-4 py-3 font-bold">이메일</th>
        <th class="text-left px-4 py-3 font-bold">역할</th>
        <th class="text-left px-4 py-3 font-bold">글/댓글</th>
        <th class="text-left px-4 py-3 font-bold">가입일</th>
        <th class="text-right px-4 py-3 font-bold">액션</th>
      </tr>
    </thead>
    <tbody class="divide-y">
      <% @users.each do |user| %>
        <tr>
          <td class="px-4 py-3 font-medium"><%= user.nickname %></td>
          <td class="px-4 py-3 text-tv-gray"><%= user.email_address %></td>
          <td class="px-4 py-3">
            <span class="<%= user.admin? ? 'text-tv-orange font-bold' : '' %>"><%= user.role %></span>
          </td>
          <td class="px-4 py-3"><%= user.posts_count %>/<%= user.comments_count %></td>
          <td class="px-4 py-3 text-tv-gray"><%= user.created_at.strftime("%Y-%m-%d") %></td>
          <td class="px-4 py-3 text-right">
            <%= link_to "편집", edit_admin_user_path(user), class: "text-tv-orange hover:underline" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="mt-6">
  <%== @pagy.series_nav %>
</div>
