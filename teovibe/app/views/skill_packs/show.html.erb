<div class="max-w-[800px] mx-auto px-5 py-16">
  <%# 뒤로가기 %>
  <div class="mb-8">
    <%= link_to "< 스킬팩 목록", skill_packs_path, class: "text-tv-gray hover:text-tv-orange transition-colors" %>
  </div>

  <div class="bg-white rounded-card-lg overflow-hidden shadow-sm">
    <%# 썸네일 %>
    <% if @skill_pack.thumbnail.attached? %>
      <%= image_tag @skill_pack.thumbnail, class: "w-full h-64 object-cover" %>
    <% else %>
      <div class="w-full h-64 bg-tv-cream flex items-center justify-center">
        <svg class="w-16 h-16 text-tv-light-gray" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"/>
        </svg>
      </div>
    <% end %>

    <div class="p-8">
      <span class="inline-block px-3 py-1 rounded-pill text-xs font-bold bg-tv-cream text-tv-gray mb-4">
        <%= @skill_pack.category_name %>
      </span>

      <h1 class="text-heading font-black mb-4"><%= @skill_pack.title %></h1>

      <div class="flex items-center gap-4 text-sm text-tv-light-gray mb-8">
        <span><%= @skill_pack.created_at.strftime("%Y.%m.%d") %></span>
        <span><%= @skill_pack.downloads_count %>회 다운로드</span>
      </div>

      <div class="prose max-w-none text-tv-dark leading-relaxed mb-8">
        <%= simple_format(@skill_pack.description) %>
      </div>

      <%# 다운로드 버튼 %>
      <% if @skill_pack.file.attached? %>
        <%= link_to download_skill_pack_path(@skill_pack),
          class: "inline-flex items-center gap-2 bg-tv-gold text-tv-black rounded-pill px-8 py-4 text-lg font-bold hover:opacity-90 transition-opacity" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
          </svg>
          무료 다운로드
        <% end %>
      <% else %>
        <span class="inline-block bg-tv-cream text-tv-gray rounded-pill px-8 py-4 text-lg font-bold">
          파일 준비 중
        </span>
      <% end %>
    </div>
  </div>
</div>
